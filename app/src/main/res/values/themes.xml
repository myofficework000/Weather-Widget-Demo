<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_button_text</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuBackground">?colorBackgroundFloating</item>
    </style>

    <style name="appCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/_10dp</item>
        <item name="cardCornerRadius">@dimen/_10dp</item>
        <item name="cardElevation">@dimen/_10dp</item>
    </style>
</resources>